{
  "$schema": "https://schemas.wp.org/wp/6.4/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#2563eb",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#64748b",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#f59e0b",
          "name": "Accent"
        },
        {
          "slug": "base",
          "color": "#ffffff",
          "name": "Base"
        },
        {
          "slug": "contrast",
          "color": "#0f172a",
          "name": "Contrast"
        },
        {
          "slug": "neutral-100",
          "color": "#f8fafc",
          "name": "Neutral 100"
        },
        {
          "slug": "neutral-200",
          "color": "#e2e8f0",
          "name": "Neutral 200"
        },
        {
          "slug": "neutral-800",
          "color": "#1e293b",
          "name": "Neutral 800"
        }
      ],
      "gradients": [
        {
          "slug": "primary-gradient",
          "gradient": "linear-gradient(135deg, #2563eb 0%, #3b82f6 100%)",
          "name": "Primary Gradient"
        }
      ],
      "duotone": [],
      "custom": true,
      "customGradient": true,
      "link": true
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
          "slug": "system",
          "name": "System Font"
        },
        {
          "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
          "slug": "primary",
          "name": "Primary Font"
        },
        {
          "fontFamily": "Georgia, serif",
          "slug": "serif",
          "name": "Serif Font"
        }
      ],
      "fontSizes": [
        {
          "slug": "xs",
          "size": "0.75rem",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "0.875rem",
          "name": "Small"
        },
        {
          "slug": "base",
          "size": "1rem",
          "name": "Base"
        },
        {
          "slug": "md",
          "size": "1.125rem",
          "name": "Medium"
        },
        {
          "slug": "lg",
          "size": "1.25rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "1.5rem",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "2rem",
          "name": "2X Large"
        },
        {
          "slug": "3xl",
          "size": "2.5rem",
          "name": "3X Large"
        },
        {
          "slug": "4xl",
          "size": "3rem",
          "name": "4X Large"
        }
      ],
      "fontWeight": true,
      "lineHeight": true,
      "textTransform": true,
      "letterSpacing": true,
      "customFontSize": true
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"],
      "spacingSizes": [
        {
          "slug": "xs",
          "size": "0.5rem",
          "name": "Extra Small"
        },
        {
          "slug": "sm",
          "size": "1rem",
          "name": "Small"
        },
        {
          "slug": "md",
          "size": "1.5rem",
          "name": "Medium"
        },
        {
          "slug": "lg",
          "size": "2rem",
          "name": "Large"
        },
        {
          "slug": "xl",
          "size": "3rem",
          "name": "Extra Large"
        },
        {
          "slug": "2xl",
          "size": "4rem",
          "name": "2X Large"
        }
      ],
      "padding": true,
      "margin": true,
      "blockGap": true
    },
    "layout": {
      "contentSize": "800px",
      "wideSize": "1200px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "custom": {
      "transition": "all 0.3s ease",
      "shadow": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)"
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": {
        "top": "0",
        "right": "var(--wp--preset--spacing--sm)",
        "bottom": "0",
        "left": "var(--wp--preset--spacing--sm)"
      }
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)",
          "fontWeight": "700",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--2-xl)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xl)",
          "fontWeight": "600",
          "lineHeight": "1.4"
        }
      },
      "h5": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--lg)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        }
      },
      "h6": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--md)",
          "fontWeight": "600",
          "lineHeight": "1.5"
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--base)"
        },
        "border": {
          "radius": "0.375rem"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "typography": {
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent)"
          }
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "var(--wp--preset--spacing--md)",
            "bottom": "var(--wp--preset--spacing--sm)"
          }
        }
      }
    }
  },
  "templateParts": [],
  "customTemplates": []
}
