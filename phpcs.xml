<?xml version="1.0"?>
<ruleset name="WordPress Coding Standards">
    <description>PHP_CodeSniffer configuration for WordPress project</description>

    <!-- What to scan -->
    <file>config</file>
    <file>web/app/mu-plugins</file>
    <file>web/app/plugins</file>
    <file>web/app/themes</file>

    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/web/wp/*</exclude-pattern>
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <!-- Rules -->
    <rule ref="WordPress"/>

    <!-- Show progress and colors -->
    <arg value="ps"/>
    <arg name="colors"/>

    <!-- Allow arguments to be modified -->
    <arg name="parallel" value="8"/>
</ruleset>
