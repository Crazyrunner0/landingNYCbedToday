# Database
DB_NAME='wordpress'
DB_USER='wordpress'
DB_PASSWORD='wordpress'
DB_HOST='db'

# Optional DB variables
# DB_HOST='localhost'
# DB_PREFIX='wp_'

# Redis
REDIS_HOST='redis'
REDIS_PORT='6379'

# WordPress URLs
WP_ENV='development'
WP_HOME='http://localhost:8080'
WP_SITEURL="${WP_HOME}/wp"

# Multibrand Configuration (default: nook-dresser-today)
# Options: nook-dresser-today, nook-mattress-today
# Changing this will switch visual identity & copy without code edits
WP_BRAND='nook-dresser-today'

# WordPress Security Keys and Salts
# Generate with: https://roots.io/salts.html
AUTH_KEY='generateme'
SECURE_AUTH_KEY='generateme'
LOGGED_IN_KEY='generateme'
NONCE_KEY='generateme'
AUTH_SALT='generateme'
SECURE_AUTH_SALT='generateme'
LOGGED_IN_SALT='generateme'
NONCE_SALT='generateme'

# Optional debug settings
WP_DEBUG_DISPLAY='false'
WP_DEBUG_LOG='false'
# SCRIPT_DEBUG='true'

# WooCommerce & Stripe (Test Mode)
STRIPE_TEST_PUBLIC_KEY='pk_test_your_key_here'
STRIPE_TEST_SECRET_KEY='sk_test_your_key_here'
STRIPE_WEBHOOK_SECRET='whsec_test_your_secret_here'

# Analytics & SEO
GA4_MEASUREMENT_ID='G-XXXXXXXXXX'
GA4_DEBUG_MODE='true'
META_PIXEL_ID='000000000000000'
META_PIXEL_TEST_EVENT_ID=''
GSC_VERIFICATION_TOKEN=''
CONSENT_BANNER_ENABLED='true'
